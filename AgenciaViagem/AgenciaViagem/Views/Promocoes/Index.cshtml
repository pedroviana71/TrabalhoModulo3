@model IEnumerable<AgenciaViagem.Models.Promocao>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create"><button type="button" class="btn btn-success">Novo</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desconto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destino)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Desconto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destino.Cidade)
            </td>
            <td>
                <a class="btn-danger" asp-action="Edit" asp-route-id="@item.ID"><button type="button" class="btn btn-primary">Editar</button></a> |
                <a asp-action="Details" asp-route-id="@item.ID"><button type="button" class="btn btn-info">Detalhes</button></a> |
                <a asp-action="Delete" asp-route-id="@item.ID"><button type="button" class="btn btn-danger">Deletar</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
